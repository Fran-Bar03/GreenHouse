<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouse.MainPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">



            <Image Source="https://imgfz.com/i/UwYnG3r.png" HeightRequest="170" Margin="0,0,0,-10"/>

            <Label Text="Invernadero"
                  FontSize="40" 
                   TextColor="#2a4808"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   Margin="0,0,0,-15"/>


            <Label Text="APP MÓVIL"
                FontSize="20"
                HorizontalOptions="Center"
                Margin="0,0,0,0"
                />

            
            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black">
                <Grid>
                    <Image Source="https://imgfz.com/i/XbLD5ue.png"
               VerticalOptions="Center"
               HorizontalOptions="Start"
               WidthRequest="20"
               HeightRequest="20" 
               Margin="10,0,0,0"/>

                <Entry Placeholder="Email"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="Black"
                   HeightRequest="50"
                   Margin="30,0,0,0"    />
                    
                </Grid>
            </Frame>
            

            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black"
                   Margin="0,0,0,40">

                <Grid>

                    <Image Source="https://imgfz.com/i/nRaJuh9.png"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    HeightRequest="20"
                    WidthRequest="20"
                    Margin="10,0,0,0"          />

                    <Entry Placeholder="Contraseña"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="Black"
                   HeightRequest="50"
                    Margin="30,0,0,0"
                   />

                </Grid>
            </Frame>

            
            <Frame Padding="10"
                   BackgroundColor="#576b43"
                   CornerRadius="25"
                   Margin="-20,-5,-20,0"
                   VerticalOptions="End">
                <StackLayout>
                <Label
                    Text="¿Olvidate tu contraseña?"
                    FontSize="9"
                    HorizontalTextAlignment="Center"
                    TextColor="White"/>

                    <Button Text="Iniciar Sesión" 
                    BackgroundColor="#2a4808" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="45" 
                    HeightRequest="50"
                    Margin="0,20,0,10"
                    BorderColor="White"/>

                    <Label Text="O"
                    TextColor="White"
                    HorizontalTextAlignment="Center"/>

                    <Button Text="Crear una cuenta" 
                    BackgroundColor="#2a4808" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="45" 
                    BorderColor="White"
                    HeightRequest="50"
                    Margin="0,10,0,10"
                    />

                </StackLayout>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
