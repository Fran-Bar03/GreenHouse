<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouse.RecuperarContraseña"
             Title="">

    <ScrollView>
        <VerticalStackLayout>

            <Image Source="https://imgfz.com/i/ogbNy1O.png" HeightRequest="30" Margin="380,0,0,0"/>
            <Image Source="https://imgfz.com/i/MmIlSvA.png" HeightRequest="80" Margin="0,-55,380,0"/>
            <Image Source="https://imgfz.com/i/Pn2aI0L.png" HeightRequest="80" Margin="0,30,0,0"/>

            <Label Text="Olvidaste tu"
                   FontAttributes="Bold"
                   FontSize="40"
                   Margin="110,25,0,0"/>

            <Label Text="Contraseña?"
                   FontSize="40"
                   Margin="110,-13,0,0"/>

            <Label Text="No te preocupes, te"
                   FontSize="15"
                   Margin="160,20,0,0"/>

            <Label Text="enviaremos instrucciones"
                   FontSize="15"
                   Margin="140,0,0,0"/>

            <Label Text="para restablecerla"
                   FontSize="15"
                   Margin="164,0,0,40"/>

            <Frame
                BackgroundColor="#576b43"
                CornerRadius="45"
                Margin="-11,-15,-11,0"
                HorizontalOptions="FillAndExpand"
                HeightRequest="430">

                <StackLayout>

                    <Label Text="Email"
                           TextColor="White"
                           FontSize="18"
                           Margin="30,40,0,0"/>

                    <Frame BackgroundColor="#576b43"
                           CornerRadius="40"
                           HeightRequest="80"
                           HorizontalOptions="FillAndExpand"
                           Margin="20,10,20,0"
                           BorderColor="White">
                        <Grid>
                            <Image Source="https://imgfz.com/i/VlRLZru.png"
                            WidthRequest="26"
                            Margin="-337,0,0,0"
                            />
     
                    <Entry Placeholder="Introduce tu email"
                           Margin="30,0,0,0"
                           PlaceholderColor="White"
                           />
                        </Grid>
                    </Frame>

                    <Button Text="Recuperar contraseña"
                            TextColor="White"
                            Margin="17,15,17,0"
                            CornerRadius="40"
                            HeightRequest="80"
                            HorizontalOptions="Fill"
                            BackgroundColor="#7a9255"/>

                </StackLayout>
                
         
                
                
            </Frame>

            <Label Text="Volver al login"
                   Margin="190,-100,0,0"
                   TextColor="White"
                   TextDecorations="Underline"/>

            <Image Source="https://imgfz.com/i/wocYAi0.png" HeightRequest="30" Margin="2,14,0,0"/>










        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>