<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenHouse.CrearCuenta"
             Title="">
    <ScrollView>
        <VerticalStackLayout>

           

            <Frame BackgroundColor="#576b43"
                   
            HeightRequest="310"
            CornerRadius="45"
            Margin="-2,-40,-2,15"
            Padding="0"
             HorizontalOptions="Fill">
                
                <StackLayout>
                    <Image Source="https://imgfz.com/i/ujKBGbN.png" HeightRequest="25" Margin="0,60,-420,0"/>
                    <Image Source="https://imgfz.com/i/gZRFkjf.png" HeightRequest="25" Margin="0,-25,350,0"/>
                    <Label Text="Vamos!"
                           TextColor="White"
                           FontSize="40"
                           Margin="45,-10,0,0"/>
                    <Label Text="Crea"
                    TextColor="White"
                           FontAttributes="Bold"
                    FontSize="40"
                    Margin="45,-10,0,0"/>
                    <Label Text="tu"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="40"
                    Margin="45,-10,0,0"/>
                    <Label Text="cuenta"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="40"
                    Margin="45,-10,0,0"/>

                    
                    
        
                </StackLayout>
                
            </Frame>

            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black"
                   Margin="0,0,0,10">
                <Grid>
                    <Image Source="https://imgfz.com/i/XbLD5ue.png"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    WidthRequest="20"
                    HeightRequest="20" 
                    Margin="10,0,0,0"/>

                    <Entry Placeholder="Nombre completo"
                           PlaceholderColor="Black"
                           Keyboard="Text"
                           HeightRequest="50"
                           Margin="30,0,0,0"/>
                </Grid>
            </Frame>


            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black"
                   Margin="0,0,0,10">
                <Grid>
                    <Image Source="https://imgfz.com/i/VlRLZru.png"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    WidthRequest="20"
                    HeightRequest="20" 
                    Margin="10,0,0,0"/>

                    <Entry Placeholder="Email"
                    PlaceholderColor="Black"
                    Keyboard="Text"
                    HeightRequest="50"
                    Margin="30,0,0,0"/>
                </Grid>
            </Frame>

            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black"
                   Margin="0,0,0,10">
                <Grid>
                    <Image Source="https://imgfz.com/i/nRaJuh9.png"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    WidthRequest="20"
                    HeightRequest="20" 
                    Margin="10,0,0,0"/>

                    <Entry Placeholder="Contraseña"
                    PlaceholderColor="Black"
                    Keyboard="Text"
                    HeightRequest="50"
                    Margin="30,0,0,0"/>
                </Grid>
            </Frame>

            <Frame Padding="10"
                   CornerRadius="50"
                   BorderColor="Black"
                   Margin="0,0,0,10">
                <Grid>
                    <Image Source="https://imgfz.com/i/nRaJuh9.png"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    WidthRequest="20"
                    HeightRequest="20" 
                    Margin="10,0,0,0"/>

                    <Entry Placeholder="Confirmar contraseña"
                    PlaceholderColor="Black"
                    Keyboard="Text"
                    HeightRequest="50"
                    Margin="30,0,0,0"/>
                </Grid>
            </Frame>

            <Image Source="https://imgfz.com/i/z3yfgcS.png" HeightRequest="30" Margin="30,20,420,0"/>

            <Label Text="Estoy de acuerdo con los"
                   Margin="80,-26,0,0"/>
            
            <Label Text="Términos y condiciones"
                   Margin="269,-22,0,20"
                   FontAttributes="Bold"
                   />

 
            <Button Text="                                Registrarse                               " 
                    BackgroundColor="#576b43" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="50"
                    HorizontalOptions="CenterAndExpand"
                    BorderColor="White"
                    HeightRequest="60"
                    Margin="0,10,0,40"/>

            <Label Text="¿Ya tienes una cuenta?"
                Margin="145,0,0,0"
                   FontSize="10"/>

            <Label Text="Iniciar Sesión"
            Margin="265,-15.69,0,0"
            FontSize="10"
            FontAttributes="Bold"/>






        </VerticalStackLayout>
    </ScrollView>
    
    
    
</ContentPage>